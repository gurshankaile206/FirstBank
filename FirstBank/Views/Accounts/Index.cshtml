@{
  Layout = "_Layout";
}

@using FirstBank.Models;
@model List<FirstBank.Models.Account>;

<h1>Accounts</h1>

@if (@Model.Count == 0)
{
  <h3>No accounts have been added yet!</h3>
} 

@foreach (Account account in Model)
{
  <li>@Html.ActionLink($"{account.Balance}", "Details", new { id = account.AccountId })</li>
}

<p>@Html.ActionLink("Add new account", "Create")</p>